---
layout: null
---
[
{% assign pages = site.collections.articles.docs | concat: site.pages | uniq %}
{% assign first = true %}
{% for p in site.collections.articles.docs %}
{% unless first %},{% endunless %}
{% assign first = false %}
{
"id": "{{ p.path | slugify }}",
"title": "{{ p.title | escape }}",
"url": "{{ site.url }}{{ p.url }}",
"content": {{ p.content | strip_html | strip_newlines | jsonify }},
"tags": {{ p.tags | default: [] | jsonify }},
"date": "{{ p.date | date_to_xmlschema }}"
}
{% endfor %}
]
